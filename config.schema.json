{
	"pluginAlias": "HomebridgeIHC",
	"pluginType": "platform",
	"singular": true,
	"schema": {
		"type": "object",
		"properties": {
			"auth": {
				"title": "Authentication",
				"type": "object",
				"properties": {
					"username": {
						"title": "Username",
						"type": "string"
					},
					"password": {
						"title": "Password",
						"type": "string"
					},
					"level": {
						"title": "Access Level",
						"type": "string",
						"enum": ["treeview", "openapi", "administrator"]
					}
				}
			},
			"endpoint": {
				"title": "Controller Endpoint",
				"type": "string",
				"placeholder": "http://x.x.x.x"
			},
			"devices": {
				"title": "Devices",
				"type": "array",
				"items": {
					"title": "Device",
					"type": "object",
					"properties": {
						"name": {
							"title": "Device Name",
							"type": "string",
							"placeholder": "Ceiling Light"
						},
						"id": {
							"title": "Device ID",
							"type": "string",
							"placeholder": "2300178"
						},
						"type": {
							"title": "Device Type",
							"type": "string",
							"enum": ["light", "switch", "button"]
						},
						"metadata": {
							"title": "Metadata",
							"type": "object",
							"properties": {
								"manufacturer": {
									"title": "Manufacturer",
									"type": "string",
									"placeholder": "LK IHC"
								},
								"model": {
									"title": "Model",
									"type": "string"
								},
								"serial": {
									"title": "Serial Number",
									"type": "string"
								}
							}
						}
					}
				}
			}
		}
	}
}
